<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Lista de Usuarios</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Usuarios</h1>
    <p><a href="/nuevo" class="btn">Agregar nuevo usuario</a></p>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Correo Electrónico</th>
          <th>Fecha de Registro</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if (users.length === 0) { %>
          <tr><td colspan="5">No hay usuarios registrados.</td></tr>
        <% } else { %>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u.id %></td>
              <td><%= u.nombre %></td>
              <td><%= u.correo %></td>
              <td><%= new Date(u.fecha_registro).toLocaleString() %></td>
              <td>
                <form action="/usuarios/<%= u.id %>/eliminar" method="POST" onsubmit="return confirm('¿Eliminar usuario?');">
                  <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
